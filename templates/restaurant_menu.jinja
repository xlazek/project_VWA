{% extends "base.jinja" %}

{% block content %}
<div class="menu-container">
    <h1>{{ restaurant.name }}</h1>
    <p>{{ restaurant.description }}</p>
    <img src="{{ restaurant.image_url }}" alt="{{ restaurant.name }}" class="restaurant-banner">

    <h2>Menu</h2>
    <div class="menu-grid">
        {% for item in restaurant.menu %}
        <div class="menu-item">
            <img src="{{ item.image_url }}" alt="{{ item.name }}" class="menu-image">
            <div class="menu-details">
                <h3>{{ item.name }}</h3>
                <p>Cena: {{ item.price }} Kč</p>
                <form method="POST" class="add-to-cart-form">
                    <input type="hidden" name="item_name" value="{{ item.name }}">
                    <input type="hidden" name="item_price" value="{{ item.price }}">
                    <label for="quantity-{{ item.name }}">Množství</label>
                    <input type="number" id="quantity-{{ item.name }}" name="quantity" value="1" min="1" class="menu-quantity">
                    <button type="submit" class="menu-add-button">Přidat do košíku</button>
                </form>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
